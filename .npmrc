# Lock down package installation
# Prevent automatic updates when installing new packages
save-exact=true

# Prevent package-lock.json from being updated automatically
package-lock=true

# Use exact versions in package.json when adding new packages
save-prefix=""

# Ensure reproducible builds
engine-strict=true

# Fail if package-lock.json is out of sync
ci=true

# Optional: Use specific npm registry (uncomment if needed)
# registry=https://registry.npmjs.org/
